@using Receipes.Models
@model Recipe
 
@{
    ViewData["Title"] = "Add Recipe";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="AddRecipe" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Chef">Chef's Name: </label>
        <input type="text" class="form-control" id="Name" aria-describedby="name" asp-for="Chef">
    </div>
    <div class="form-group">
        <label asp-for="Name">Recipe Name: </label>
        <input type="text" class="form-control" id="Name" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description: </label>
        <input type="text" class="form-control" id="Description" asp-for="Description">
    </div>
    <div class="form-group">
        <label asp-for="Ingredients">Ingredients: </label>
        <input type="text" class="form-control" id="Description" asp-for="Ingredients">
    </div>
    <div class="form-group">
        <label asp-for="Time">Cooking Time: </label>
        <input type="text" class="form-control" id="Description" asp-for="Time">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>